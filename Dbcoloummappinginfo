// DbColumnMappingInfo.java
package com.example.analyzer.model;

import com.fasterxml.jackson.annotation.JsonInclude;

@JsonInclude(JsonInclude.Include.NON_NULL)
public class DbColumnMappingInfo {
    public String repositoryClass;
    public String repositoryMethod;
    public String repositoryParameterName; // The parameter in the repo method
    public String mappedColumnName; // The actual DB column name
    public String queryExpression; // The @Query string if applicable
    public String mappingSource; // e.g., "QUERY_ANNOTATION", "METHOD_NAME_DERIVATION"

    public DbColumnMappingInfo(String repositoryClass, String repositoryMethod, String repositoryParameterName, String mappedColumnName, String queryExpression, String mappingSource) {
        this.repositoryClass = repositoryClass;
        this.repositoryMethod = repositoryMethod;
        this.repositoryParameterName = repositoryParameterName;
        this.mappedColumnName = mappedColumnName;
        this.queryExpression = queryExpression;
        this.mappingSource = mappingSource;
    }
}
